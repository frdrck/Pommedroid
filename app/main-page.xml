<?xml version="1.0" encoding="UTF-8" ?>
<Page loaded="pageLoaded">
  <StackLayout>
    <Image src="~/img/pomme-apple.gif" stretch="none" cssClass="logo"/>
    <Label text="Welcome" cssClass="welcome"/>

    <Label text="{{ message }}" cssClass="username-prompt"/>
    <TextField text="{{ username }}" cssClass="username"/>

    <Label text="Password" cssClass="password-prompt"/>
    <TextField text="{{ password }}" cssClass="password"/>

    <Button text="Submit" tap="{{login}}" cssClass="login"/>

    <Label text="Sign in with" cssClass="twitter-prompt"/>
    <Image src="~/img/twitterbird.png" stretch="none" cssClass="twitter-logo" />

    <Label text="Already have an account?" cssClass="have-account"/>
  </StackLayout>
</Page>
