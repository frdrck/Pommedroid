<?xml version="1.0" encoding="UTF-8" ?>
<Page loaded="loaded">
  <StackLayout layout="vertical">
    <Label text="{{ message }}" cssClass="welcome" />

    <ListView items="{{ games }}">
      <ListView.itemTemplate>
        <GridLayout columns="*,*,auto">
          <Label text="{{ name }}" col="0" cssClass="game"
            horizontalAlignment="left" verticalAlignment="center" />
          <Label text="{{ players + '/' + capacity }}" col="1" cssClass="capacity"
            horizontalAlignment="right" verticalAlignment="center" />
          <Button text="Join" col="2" tap="join"
            horizontalAlignment="right" verticalAlignment="center" />
        </GridLayout>
      </ListView.itemTemplate>
    </ListView>
  </StackLayout>
</Page>
